@model IEnumerable<RealEstate.Persistance.Models.dbo.ContratosModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Registrar contrato </a>
</p>

@if (Model == null || !Model.Any())
{
    <h2>No existen contratos registrados actualmente.</h2>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ContratoID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PropiedadID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClienteID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AgenteID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaFin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoContrato)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Monto)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContratoID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PropiedadID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClienteID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AgenteID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaInicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaFin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoContrato)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Monto)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ContratoID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ContratoID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ContratoID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
