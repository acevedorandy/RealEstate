@using RealEstate.Application.Dtos.identity.account;
@model ResetPasswordDto
@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<style>
    .reset-password-container {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        overflow: hidden;
    }

        .reset-password-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('https://images.unsplash.com/photo-1560518883-ce09059eeffa?ixlib=rb-4.0.3') center/cover no-repeat;
            opacity: 0.15;
            z-index: 0;
        }

    .password-card {
        width: 100%;
        max-width: 500px;
        border: none;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        position: relative;
        z-index: 1;
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .password-card-header {
        background: linear-gradient(to right, #4b6cb7, #182848);
        color: white;
        padding: 25px;
        text-align: center;
        border-bottom: none;
    }

    .password-card-title {
        font-size: 1.8rem;
        font-weight: 600;
        letter-spacing: 1px;
        margin-bottom: 0;
    }

    .password-card-body {
        padding: 30px;
        background: rgba(255, 255, 255, 0.95);
    }

    .form-label {
        font-weight: 500;
        color: #495057;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .form-control {
        height: 48px;
        border-radius: 8px;
        border: 1px solid #ced4da;
        padding-left: 45px;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: #4b6cb7;
            box-shadow: 0 0 0 0.25rem rgba(75, 108, 183, 0.25);
        }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #6c757d;
        font-size: 1.1rem;
    }

    .btn-submit {
        background: linear-gradient(to right, #4b6cb7, #182848);
        border: none;
        padding: 12px 30px;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s;
    }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(75, 108, 183, 0.4);
        }

    .btn-back {
        border: 1px solid #4b6cb7;
        color: #4b6cb7;
        padding: 12px 30px;
        font-weight: 600;
        transition: all 0.3s;
    }

        .btn-back:hover {
            background: rgba(75, 108, 183, 0.1);
        }

    .password-strength {
        height: 4px;
        background: #e9ecef;
        margin-top: 8px;
        border-radius: 2px;
        overflow: hidden;
    }

    .strength-meter {
        height: 100%;
        width: 0;
        transition: width 0.3s;
    }

    @@media (max-width: 576px) {
        .password-card {
            border-radius: 0;
            height: 100vh;
        }

        .password-card-body {
            padding: 20px;
        }
    }
</style>

<div class="reset-password-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="password-card">
                    <div class="password-card-header">
                        <h2 class="password-card-title">
                            <i class="fas fa-key me-2"></i>Nueva Contraseña
                        </h2>
                    </div>

                    <div class="password-card-body">
                        @if (Model.HasError)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                <span>@Model.Error</span>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <form method="post" asp-controller="Account" asp-action="ResetPassword">
                            <input type="hidden" asp-for="Token" />

                            <div class="mb-4 position-relative">
                                <label asp-for="Email" class="form-label">
                                    <i class="fas fa-envelope"></i> Correo Electrónico
                                </label>
                                <input asp-for="Email" class="form-control shadow-sm" required />
                                <span asp-validation-for="Email" class="text-danger small d-block mt-1"></span>
                            </div>

                            <div class="mb-4 position-relative">
                                <label asp-for="Password" class="form-label">
                                    <i class="fas fa-lock"></i> Nueva Contraseña
                                </label>
                                <input asp-for="Password" type="password" class="form-control shadow-sm" id="passwordInput" />
                                <div class="password-strength">
                                    <div class="strength-meter" id="strengthMeter"></div>
                                </div>
                                <span asp-validation-for="Password" class="text-danger small d-block mt-1"></span>
                            </div>

                            <div class="mb-4 position-relative">
                                <label asp-for="ConfirmPassword" class="form-label">
                                    <i class="fas fa-lock"></i> Confirmar Contraseña
                                </label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control shadow-sm" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small d-block mt-1"></span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mt-4">
                                <button type="submit" class="btn btn-submit text-white rounded-pill">
                                    <i class="fas fa-save me-2"></i>Guardar Cambios
                                </button>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-back rounded-pill">
                                    <i class="fas fa-arrow-left me-2"></i>Volver
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Efecto de visualización de fortaleza de contraseña
        document.getElementById('passwordInput').addEventListener('input', function () {
            const password = this.value;
            const strengthMeter = document.getElementById('strengthMeter');
            let strength = 0;

            if (password.length > 0) strength += 20;
            if (password.length >= 8) strength += 30;
            if (/[A-Z]/.test(password)) strength += 15;
            if (/[0-9]/.test(password)) strength += 15;
            if (/[^A-Za-z0-9]/.test(password)) strength += 20;

            strengthMeter.style.width = Math.min(strength, 100) + '%';

            if (strength < 40) {
                strengthMeter.style.backgroundColor = '#dc3545';
            } else if (strength < 70) {
                strengthMeter.style.backgroundColor = '#fd7e14';
            } else {
                strengthMeter.style.backgroundColor = '#28a745';
            }
        });
    </script>
}