@model RealEstate.Persistance.Models.dbo.UsuariosModel
@{
    ViewData["Title"] = "Mi Perfil";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary: #2c3e50;
            --secondary: #3498db;
            --accent: #e74c3c;
            --light: #f8f9fa;
            --dark: #212529;
            --gold: #d4af37;
            --cream: #f5f0e6;
            --dark-blue: #1a2a3a;
        }

        body {
            background-color: #f5f5f5; /* Cambia esto al tono gris que prefieras */
            /* Mantén el resto de propiedades igual */
            color: var(--dark-blue);
            font-family: 'Montserrat', sans-serif;
            line-height: 1.6;
        }

        .profile-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 2rem;
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        }

        .profile-header {
            text-align: center;
            margin-bottom: 3rem;
            position: relative;
            padding-bottom: 1.5rem;
        }

            .profile-header h1 {
                font-family: 'Playfair Display', serif;
                font-weight: 600;
                color: var(--dark-blue);
                position: relative;
                display: inline-block;
            }

                .profile-header h1:after {
                    content: '';
                    position: absolute;
                    width: 50%;
                    height: 3px;
                    background: linear-gradient(90deg, var(--gold), transparent);
                    bottom: -10px;
                    left: 25%;
                    border-radius: 3px;
                }

        .profile-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            overflow: hidden;
            transition: transform 0.3s ease;
            border: none;
        }

            .profile-card:hover {
                transform: translateY(-5px);
            }

        .profile-img-container {
            position: relative;
            width: 180px;
            height: 180px;
            margin: 0 auto;
            border-radius: 50%;
            overflow: hidden;
            border: 5px solid white;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .profile-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .profile-img-container:hover .profile-img {
            transform: scale(1.05);
        }

        .profile-name {
            font-family: 'Playfair Display', serif;
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--dark-blue);
            margin-top: 1.5rem;
        }

        .profile-role {
            display: inline-block;
            background: linear-gradient(135deg, var(--gold), #f1c40f);
            color: white;
            padding: 0.3rem 1rem;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 500;
            margin: 0.5rem 0;
            box-shadow: 0 3px 10px rgba(212, 175, 55, 0.3);
        }

        .profile-details {
            background: var(--light);
            border-radius: 10px;
            padding: 2rem;
            box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.02);
        }

        .detail-item {
            margin-bottom: 1.5rem;
            position: relative;
            padding-left: 2rem;
        }

            .detail-item:before {
                content: '';
                position: absolute;
                left: 0;
                top: 0.3rem;
                width: 8px;
                height: 8px;
                background: var(--gold);
                border-radius: 50%;
            }

        .detail-label {
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--primary);
            font-weight: 600;
            margin-bottom: 0.3rem;
        }

        .detail-value {
            font-size: 1.1rem;
            color: var(--dark);
            font-weight: 500;
        }

        .btn-edit {
            background: linear-gradient(135deg, var(--secondary), #2980b9);
            color: white;
            border: none;
            border-radius: 30px;
            padding: 0.7rem 2rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

            .btn-edit:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(52, 152, 219, 0.4);
                color: white;
            }

        .social-links {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-top: 1.5rem;
        }

        .social-link {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--light);
            color: var(--dark-blue);
            transition: all 0.3s ease;
        }

            .social-link:hover {
                background: var(--secondary);
                color: white;
                transform: translateY(-3px);
            }

        .status-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            background: @(Model.IsActive ? "#2ecc71" : "#e74c3c");
            color: white;
            padding: 0.3rem 0.8rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        }

        @@media (max-width: 768px) {
            .profile-container {
                padding: 1.5rem;
            }

            .profile-name {
                font-size: 1.5rem;
            }

            .profile-details {
                padding: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="profile-container">
        <div class="profile-header">
            <h1>Mi Perfil</h1>
        </div>

        <div class="row">
            <div class="col-lg-4">
                <div class="profile-card p-4 text-center mb-4 position-relative">
                    <div class="status-badge">
                        @(Model.IsActive ? "Activo" : "Inactivo")
                    </div>
                    <div class="profile-img-container">
                        <img src="@(string.IsNullOrEmpty(Model.Foto) ? $"https://ui-avatars.com/api/?name={Model.Nombre}+{Model.Apellido}&background=random" : Model.Foto)"
                             alt="Foto de perfil" class="profile-img">
                    </div>
                    <h2 class="profile-name">@Model.Nombre @Model.Apellido</h2>
                    <span class="profile-role">@Model.Rol</span>

                    <a href="@Url.Action("EditarPerfil", new { id = Model.Id })" class="btn btn-edit">
                        <i class="fas fa-pen"></i> Editar Perfil
                    </a>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="profile-card h-100">
                    <div class="profile-details h-100">
                        <h3 class="mb-4" style="font-family: 'Playfair Display', serif; color: var(--dark-blue);">Información Personal</h3>

                        <div class="row">

                            @Html.HiddenFor(model => model.Id)

                            <div class="col-md-6">
                                <div class="detail-item">
                                    <div class="detail-label">Nombre</div>
                                    <div class="detail-value">@Model.Nombre</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <div class="detail-label">Apellido</div>
                                    <div class="detail-value">@Model.Apellido</div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <div class="detail-label">Nombre de Usuario</div>
                                    <div class="detail-value">@Model.UserName</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <div class="detail-label">Cédula</div>
                                    <div class="detail-value">@Model.Cedula</div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <div class="detail-label">Correo Electrónico</div>
                                    <div class="detail-value">@Model.Email</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <div class="detail-label">Teléfono</div>
                                    <div class="detail-value">@Model.Telefono</div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 pt-3 border-top">
                            <h4 class="mb-3" style="font-family: 'Playfair Display', serif; color: var(--dark-blue);">Estadísticas</h4>
                            <div class="row">
                                <div class="col-6 col-md-3 text-center">
                                    <div class="p-3 bg-light rounded">
                                        <div class="text-muted small">Propiedades</div>
                                        <div class="h4 mb-0" style="color: var(--gold);">24</div>
                                    </div>
                                </div>
                                <div class="col-6 col-md-3 text-center">
                                    <div class="p-3 bg-light rounded">
                                        <div class="text-muted small">Clientes</div>
                                        <div class="h4 mb-0" style="color: var(--gold);">18</div>
                                    </div>
                                </div>
                                <div class="col-6 col-md-3 text-center">
                                    <div class="p-3 bg-light rounded">
                                        <div class="text-muted small">Ventas</div>
                                        <div class="h4 mb-0" style="color: var(--gold);">12</div>
                                    </div>
                                </div>
                                <div class="col-6 col-md-3 text-center">
                                    <div class="p-3 bg-light rounded">
                                        <div class="text-muted small">Rating</div>
                                        <div class="h4 mb-0" style="color: var(--gold);">4.8</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Efecto de carga suave
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                document.body.style.opacity = '1';
            }, 100);
        });

        // Transición suave al cargar
        document.body.style.opacity = '0';
        document.body.style.transition = 'opacity 0.5s ease';
    </script>
</body>
</html>