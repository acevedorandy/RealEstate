@model IEnumerable<RealEstate.Persistance.Models.dbo.PropiedadesModel>

@{
    ViewData["Title"] = "Propiedades Premium";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />

    <style>
        :root {
            --primary-color: #4361ee;
            --secondary-color: #3f37c9;
            --accent-color: #f72585;
            --light-color: #f8f9fa;
            --dark-color: #212529;
        }

        .hero-section {
            background: linear-gradient(135deg, rgba(67,97,238,0.1) 0%, rgba(63,55,201,0.05) 100%);
            border-radius: 20px;
            padding: 3rem;
            margin-bottom: 3rem;
        }

        .property-card {
            transition: all 0.3s ease;
            border: none;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }

            .property-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 30px rgba(67,97,238,0.15);
            }

        .property-badge {
            position: absolute;
            top: 15px;
            left: 15px;
            font-size: 0.8rem;
            font-weight: 600;
            padding: 0.5rem 1rem;
            border-radius: 50px;
            z-index: 2;
        }

            .property-badge.casa {
                background-color: #4cc9f0;
                color: white;
            }

            .property-badge.departamento {
                background-color: #f72585;
                color: white;
            }

            .property-badge.terreno {
                background-color: #4895ef;
                color: white;
            }

            .property-badge.oficina {
                background-color: #3a0ca3;
                color: white;
            }

        .img-container {
            height: 220px;
            overflow: hidden;
            position: relative;
        }

            .img-container img {
                transition: transform 0.5s ease;
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .property-card:hover .img-container img {
            transform: scale(1.1);
        }

        .price-tag {
            position: absolute;
            bottom: 15px;
            left: 15px;
            background-color: rgba(255,255,255,0.9);
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-weight: 700;
            color: var(--primary-color);
            box-shadow: 0 3px 10px rgba(0,0,0,0.1);
            z-index: 2;
        }

        .card-body {
            padding: 1.5rem;
        }

        .card-title {
            font-weight: 700;
            color: var(--dark-color);
            margin-bottom: 0.5rem;
        }

        .location {
            color: #6c757d;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
        }

            .location i {
                margin-right: 0.5rem;
                color: var(--accent-color);
            }

        .description {
            color: #6c757d;
            font-size: 0.9rem;
            margin-bottom: 1.5rem;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .feature-item {
            display: flex;
            align-items: center;
        }

        .feature-icon {
            width: 32px;
            height: 32px;
            background-color: rgba(67,97,238,0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 0.75rem;
            color: var(--primary-color);
        }

        .feature-text {
            font-size: 0.85rem;
        }

            .feature-text .label {
                color: #6c757d;
                display: block;
                font-size: 0.75rem;
            }

            .feature-text .value {
                font-weight: 600;
                color: var(--dark-color);
            }

        .card-footer {
            background: transparent;
            border-top: none;
            padding: 0 1.5rem 1.5rem;
        }

        .btn-details {
            background-color: var(--primary-color);
            color: white;
            border-radius: 50px;
            padding: 0.5rem 1.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-details:hover {
                background-color: var(--secondary-color);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(67,97,238,0.3);
            }

        .btn-favorite {
            background-color: white;
            color: var(--accent-color);
            border: 1px solid var(--accent-color);
            border-radius: 50px;
            padding: 0.5rem 1.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-favorite:hover {
                background-color: var(--accent-color);
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(247,37,133,0.3);
            }

        .filter-card {
            background-color: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            margin-bottom: 3rem;
        }

        .filter-title {
            color: var(--primary-color);
            font-weight: 700;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
        }

            .filter-title i {
                margin-right: 0.75rem;
                font-size: 1.5rem;
            }

        .no-properties {
            text-align: center;
            padding: 5rem 0;
        }

            .no-properties i {
                font-size: 5rem;
                color: rgba(67,97,238,0.2);
                margin-bottom: 1.5rem;
            }

            .no-properties h3 {
                color: var(--dark-color);
                font-weight: 700;
                margin-bottom: 1rem;
            }

            .no-properties p {
                color: #6c757d;
                margin-bottom: 2rem;
                max-width: 500px;
                margin-left: auto;
                margin-right: auto;
            }

        .btn-refresh {
            background-color: var(--primary-color);
            color: white;
            border-radius: 50px;
            padding: 0.75rem 2rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-refresh:hover {
                background-color: var(--secondary-color);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(67,97,238,0.3);
            }
    </style>
}

<div class="container my-5">
    <!-- Hero Section -->
    <div class="hero-section text-center">
        <h1 class="display-4 fw-bold mb-3 text-dark"><i class="fas fa-home me-3"></i>Encuentra Tu Propiedad Ideal</h1>
        <p class="lead text-muted mb-4">Explora nuestra exclusiva selección de propiedades premium en las mejores ubicaciones</p>
    </div>

    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle me-3 fs-4"></i>
                <div>@TempData["SuccessMessage"]</div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-triangle me-3 fs-4"></i>
                <div>@TempData["ErrorMessage"]</div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filters Section -->
    <div class="filter-card">
        <h3 class="filter-title"><i class="fas fa-sliders-h"></i>Filtros Avanzados</h3>
        <form asp-action="Filter" method="get">
            <div class="row g-4">
                <div class="col-md-3">
                    <label class="form-label fw-semibold">
                        <i class="fas fa-building me-2"></i>Tipo de Propiedad
                    </label>
                    @Html.DropDownList("tipoPropiedad", (List<SelectListItem>)ViewBag.Tipos, "Todos los tipos", new { @class = "form-select shadow-sm" })
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-semibold"><i class="fas fa-tag me-2"></i>Rango de Precio</label>
                    <div class="input-group mb-2">
                        <span class="input-group-text bg-light"><i class="fas fa-arrow-down"></i></span>
                        <input type="number" step="0.01" name="minPrice" class="form-control shadow-sm" placeholder="Mínimo" />
                        <span class="input-group-text bg-light">RD$</span>
                    </div>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-arrow-up"></i></span>
                        <input type="number" step="0.01" name="maxPrice" class="form-control shadow-sm" placeholder="Máximo" />
                        <span class="input-group-text bg-light">RD$</span>
                    </div>
                </div>

                <div class="col-md-2">
                    <label class="form-label fw-semibold"><i class="fas fa-bed me-2"></i>Habitaciones</label>
                    <select name="habitacion" class="form-select shadow-sm">
                        <option value="">Cualquiera</option>
                        <option value="1">1+</option>
                        <option value="2">2+</option>
                        <option value="3">3+</option>
                        <option value="4">4+</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label fw-semibold"><i class="fas fa-bath me-2"></i>Baños</label>
                    <select name="baños" class="form-select shadow-sm">
                        <option value="">Cualquiera</option>
                        <option value="1">1+</option>
                        <option value="2">2+</option>
                        <option value="3">3+</option>
                    </select>
                </div>

                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100 shadow-lg">
                        <i class="fas fa-search me-2"></i> Buscar
                    </button>
                </div>
            </div>
        </form>
    </div>

    <!-- Properties Listing -->
    @if (Model == null || !Model.Any())
    {
        <div class="no-properties">
            <i class="fas fa-home"></i>
            <h3>No encontramos propiedades</h3>
            <p>Lo sentimos, no hay propiedades disponibles que coincidan con tus criterios de búsqueda. Intenta ajustar los filtros o vuelve a intentarlo más tarde.</p>
            <a href="#" class="btn btn-refresh">
                <i class="fas fa-sync-alt me-2"></i>Recargar Propiedades
            </a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="property-card card h-100">
                        <div class="img-container">
                            <img src="@item.Imagen" class="card-img-top" alt="@item.Titulo" />
                            <span class="property-badge tipo-@item.TipoPropiedad">@item.TipoPropiedad</span>
                            <span class="price-tag">RD$ @item.Precio.ToString("N0")</span>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title">@item.Titulo</h5>
                            <div class="location">
                                <i class="fas fa-map-marker-alt"></i>
                                <span>@item.Direccion, @item.Ciudad</span>
                            </div>
                            <p class="codigo text-gray-500 font-mono">@item.Codigo</p>
                            <p class="description">@item.Descripcion</p>

                            <div class="features-grid">
                                <div class="feature-item">
                                    <div class="feature-icon">
                                        <i class="fas fa-bed"></i>
                                    </div>
                                    <div class="feature-text">
                                        <span class="label">Habitaciones</span>
                                        <span class="value">@item.Habitaciones</span>
                                    </div>
                                </div>

                                <div class="feature-item">
                                    <div class="feature-icon">
                                        <i class="fas fa-bath"></i>
                                    </div>
                                    <div class="feature-text">
                                        <span class="label">Baños</span>
                                        <span class="value">@item.Baños</span>
                                    </div>
                                </div>

                                <div class="feature-item">
                                    <div class="feature-icon">
                                        <i class="fas fa-car"></i>
                                    </div>
                                    <div class="feature-text">
                                        <span class="label">Parqueos</span>
                                        <span class="value">@item.Parqueos</span>
                                    </div>
                                </div>

                                <div class="feature-item">
                                    <div class="feature-icon">
                                        <i class="fas fa-ruler-combined"></i>
                                    </div>
                                    <div class="feature-text">
                                        <span class="label">Área</span>
                                        <span class="value">@item.TamañoTerreno m²</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@item.PropiedadID" class="btn btn-details">
                                    <i class="fas fa-eye me-2"></i>Ver Detalles
                                </a>
                                <form asp-action="Favorite" method="post" class="d-grid">
                                    <input type="hidden" name="PropiedadID" value="@item.PropiedadID" />
                                    <button type="submit" class="btn btn-favorite">
                                        <i class="fas fa-heart me-2"></i>Guardar
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}