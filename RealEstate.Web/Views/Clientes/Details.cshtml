@model RealEstate.Persistance.Models.EnumerablesModel.PropiedadDetallesModel

@{
    ViewData["Title"] = $"Vendo {Model.PropiedadesModel.Titulo}";
}

<!-- CSS de Bootstrap y Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<!-- Estilos personalizados -->
<style>
    :root {
        --primary-color: #2c3e50;
        --secondary-color: #3498db;
        --accent-color: #e74c3c;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }

    .property-header {
        background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6));
        color: white;
        padding: 2rem 0;
        margin-bottom: 2rem;
        border-radius: 0 0 10px 10px;
    }

    .property-title {
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .property-location {
        font-size: 1.1rem;
    }

    .carousel-item img {
        height: 500px;
        object-fit: cover;
        border-radius: 8px;
    }

    .thumbnail-container {
        display: flex;
        gap: 10px;
        margin-top: 15px;
        overflow-x: auto;
        padding-bottom: 10px;
    }

    .thumbnail-img {
        width: 80px;
        height: 60px;
        object-fit: cover;
        border-radius: 4px;
        cursor: pointer;
        transition: transform 0.2s;
        border: 2px solid transparent;
    }

        .thumbnail-img:hover {
            transform: scale(1.05);
            border-color: var(--secondary-color);
        }

    .property-features {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 1.5rem;
        margin: 2rem 0;
    }

    .feature-item {
        text-align: center;
        padding: 0.5rem;
    }

    .feature-icon {
        font-size: 1.5rem;
        color: var(--secondary-color);
        margin-bottom: 0.5rem;
    }

    .feature-value {
        font-weight: 600;
        color: var(--primary-color);
    }

    .feature-label {
        font-size: 0.85rem;
        color: #6c757d;
    }

    .agent-card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        margin-bottom: 1.5rem;
    }

    .agent-avatar {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border: 3px solid white;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
    }

    .social-btn {
        width: 35px;
        height: 35px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
    }

    .offer-btn {
        background-color: var(--accent-color);
        border: none;
        font-weight: 600;
        padding: 0.75rem;
        transition: all 0.3s;
    }

        .offer-btn:hover {
            background-color: #c0392b;
            transform: translateY(-2px);
        }

    .chat-popup {
        position: fixed;
        bottom: 20px;
        right: 20px;
        width: 320px;
        background-color: white;
        z-index: 1050;
        border-radius: 10px;
        box-shadow: 0 5px 25px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        transform: translateY(20px);
        opacity: 0;
        transition: all 0.3s ease;
    }

        .chat-popup.show {
            transform: translateY(0);
            opacity: 1;
        }

    .chat-header {
        background-color: var(--primary-color);
        color: white;
        padding: 0.75rem 1rem;
        font-weight: 600;
    }

    .chat-body {
        max-height: 350px;
        overflow-y: auto;
        padding: 1rem;
    }

    .price-badge {
        background-color: var(--accent-color);
        color: white;
        font-size: 1.2rem;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        display: inline-block;
        margin-bottom: 1rem;
    }

    .section-title {
        color: var(--primary-color);
        font-weight: 600;
        border-bottom: 2px solid var(--secondary-color);
        padding-bottom: 0.5rem;
        margin-bottom: 1.5rem;
    }

    .property-description {
        line-height: 1.8;
        white-space: pre-line;
    }

    @@media (max-width: 768px) {
        .carousel-item img {
            height: 300px;
        }

        .property-header {
            padding: 1.5rem 0;
        }
    }
</style>

<div class="property-header">
    <div class="container">
        <h1 class="property-title">@Model.PropiedadesModel.Titulo</h1>
        <p class="property-location">
            <i class="bi bi-geo-alt-fill"></i> @Model.PropiedadesModel.Sector, @Model.PropiedadesModel.Ciudad
        </p>
        <div class="price-badge">
            <i class="bi bi-tag-fill"></i> RD$ @Model.PropiedadesModel.Precio.ToString("N0")
        </div>
    </div>
</div>

<div class="container py-4">
    <div class="row">
        <!-- Sección principal (Galería + Detalles) -->
        <div class="col-lg-8">
            <!-- Galería de imágenes -->
            @if (Model.PropiedadFotosModel != null && Model.PropiedadFotosModel.Any())
            {
                <div id="propertyCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.PropiedadFotosModel.Count; i++)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img src="@Url.Content(Model.PropiedadFotosModel[i].Imagen)" class="d-block w-100" alt="Imagen de la propiedad">
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#propertyCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Anterior</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#propertyCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Siguiente</span>
                    </button>
                </div>

                <div class="thumbnail-container">
                    @for (int i = 0; i < Model.PropiedadFotosModel.Count; i++)
                    {
                        <img src="@Url.Content(Model.PropiedadFotosModel[i].Imagen)" class="thumbnail-img"
                             onclick="$('#propertyCarousel').carousel(@i)" alt="Miniatura">
                    }
                </div>
            }

            <!-- Descripción de la propiedad -->
            <div class="mt-5">
                <h3 class="section-title">Descripción</h3>
                <p class="property-description">@Model.PropiedadesModel.Descripcion</p>
            </div>

            <!-- Características principales -->
            <div class="property-features mt-4">
                <h3 class="section-title">Detalles de la Propiedad</h3>
                <div class="row">
                    <div class="col-6 col-md-4 col-lg-3 feature-item">
                        <div class="feature-icon"><i class="bi bi-house-door-fill"></i></div>
                        <div class="feature-value">@Model.PropiedadesModel.TipoPropiedad</div>
                        <div class="feature-label">Tipo de propiedad</div>
                    </div>
                    <div class="col-6 col-md-4 col-lg-3 feature-item">
                        <div class="feature-icon"><i class="bi bi-upc-scan"></i></div>
                        <div class="feature-value">@Model.PropiedadesModel.Codigo</div>
                        <div class="feature-label">Código</div>
                    </div>
                    <div class="col-6 col-md-4 col-lg-3 feature-item">
                        <div class="feature-icon"><i class="bi bi-rulers"></i></div>
                        <div class="feature-value">@Model.PropiedadesModel.TamañoTerreno m²</div>
                        <div class="feature-label">Área construida</div>
                    </div>
                    <div class="col-6 col-md-4 col-lg-3 feature-item">
                        <div class="feature-icon"><i class="bi bi-calendar-event"></i></div>
                        <div class="feature-value">@Model.PropiedadesModel.AñoConstruccion.ToString("yyyy")</div>
                        <div class="feature-label">Año construcción</div>
                    </div>
                    <div class="col-6 col-md-4 col-lg-3 feature-item">
                        <div class="feature-icon"><i class="bi bi-door-open"></i></div>
                        <div class="feature-value">@Model.PropiedadesModel.Habitaciones</div>
                        <div class="feature-label">Habitaciones</div>
                    </div>
                    <div class="col-6 col-md-4 col-lg-3 feature-item">
                        <div class="feature-icon"><i class="bi bi-badge-wc-fill"></i></div>
                        <div class="feature-value">@Model.PropiedadesModel.Baños</div>
                        <div class="feature-label">Baños</div>
                    </div>
                    <div class="col-6 col-md-4 col-lg-3 feature-item">
                        <div class="feature-icon"><i class="bi bi-car-front-fill"></i></div>
                        <div class="feature-value">@Model.PropiedadesModel.Parqueos</div>
                        <div class="feature-label">Parqueos</div>
                    </div>
                    <div class="col-6 col-md-4 col-lg-3 feature-item">
                        <div class="feature-icon"><i class="bi bi-building"></i></div>
                        <div class="feature-value">@Model.PropiedadesModel.TotalNivel</div>
                        <div class="feature-label">Niveles edificio</div>
                    </div>
                    <div class="col-6 col-md-4 col-lg-3 feature-item">
                        <div class="feature-icon"><i class="bi bi-arrow-up-circle-fill"></i></div>
                        <div class="feature-value">@Model.PropiedadesModel.Piso</div>
                        <div class="feature-label">Piso/Nivel</div>
                    </div>
                </div>
            </div>

            <!-- Amenidades -->
@*             @if (!string.IsNullOrEmpty(Model.PropiedadesModel.Amenidades))
            {
                <div class="mt-5">
                    <h3 class="section-title">Amenidades</h3>
                    <div class="row">
                        @foreach (var amenidad in Model.PropiedadesModel.Amenidades.Split(','))
                        {
                            <div class="col-6 col-md-4 mb-2">
                                <i class="bi bi-check-circle-fill text-success"></i> @amenidad.Trim()
                            </div>
                        }
                    </div>
                </div>
            } *@
        </div>

        <!-- Sidebar - Agente y acciones -->
        <div class="col-lg-4">
            <!-- Tarjeta del agente -->
            <div class="agent-card">
                <div class="card-body text-center p-4">
                    <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" class="agent-avatar mb-3" alt="Agente">
                    <h5 class="mb-1">@Model.UsuariosModel.Nombre @Model.UsuariosModel.Apellido</h5>
                    <p class="text-muted mb-3">Agente Inmobiliario</p>

                    <div class="d-flex justify-content-center gap-2 mb-3">
                        <a href="tel:@Model.UsuariosModel.Telefono" class="social-btn bg-primary text-white">
                            <i class="bi bi-telephone-fill"></i>
                        </a>
                        <a href="https://wa.me/Model.UsuariosModel.Celular" target="_blank" class="social-btn bg-success text-white">
                            <i class="bi bi-whatsapp"></i>
                        </a>
                        <a href="mailto:@Model.UsuariosModel.Email" class="social-btn bg-dark text-white">
                            <i class="bi bi-envelope-fill"></i>
                        </a>
                    </div>

                    <button class="btn btn-outline-primary btn-sm w-100 mb-2" onclick="abrirChat()">
                        <i class="bi bi-chat-left-text-fill"></i> Enviar mensaje
                    </button>

                    <button class="btn offer-btn text-white w-100" data-bs-toggle="modal" data-bs-target="#offerModal">
                        <i class="bi bi-cash-stack"></i> Hacer una oferta
                    </button>
                </div>
            </div>

            <!-- Formulario de contacto rápido -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">Contacto Rápido</h5>
                    <form>
                        <div class="mb-3">
                            <input type="text" class="form-control" placeholder="Tu nombre" required>
                        </div>
                        <div class="mb-3">
                            <input type="email" class="form-control" placeholder="Tu email" required>
                        </div>
                        <div class="mb-3">
                            <input type="tel" class="form-control" placeholder="Tu teléfono">
                        </div>
                        <div class="mb-3">
                            <textarea class="form-control" rows="3" placeholder="Tu mensaje"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Enviar consulta</button>
                    </form>
                </div>
            </div>

            <!-- Mapa de ubicación (placeholder) -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Ubicación</h5>
                    <div class="ratio ratio-16x9">
                        <div class="bg-light d-flex align-items-center justify-content-center">
                            <i class="bi bi-map-fill text-muted" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                    <p class="mt-2 text-muted small">@Model.PropiedadesModel.Sector, @Model.PropiedadesModel.Ciudad</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para hacer oferta -->
<div class="modal fade" id="offerModal" tabindex="-1" aria-labelledby="offerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="offerModalLabel">Hacer Oferta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" action="/Ofertas/Create">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" name="PropiedadID" value="@Model.PropiedadesModel.PropiedadID" />
                    <div class="mb-3">
                        <label for="offerAmount" class="form-label">Monto de la oferta (RD$)</label>
                        <div class="input-group">
                            <span class="input-group-text">RD$</span>
                            <input type="number" class="form-control" id="offerAmount" name="Cifra"
                                   min="1" required placeholder="Ej: 2500000" />
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Enviar oferta</button>
                </div>
            </form>

        </div>
    </div>
</div>

<!-- Ventana de chat -->
<div id="chatWindow" class="chat-popup">
    <div class="chat-header d-flex justify-content-between align-items-center">
        <span>Chat con @Model.UsuariosModel.Nombre</span>
        <button type="button" class="btn-close btn-close-white" onclick="cerrarChat()"></button>
    </div>
    <div class="chat-body">
        <div class="alert alert-info small">
            <i class="bi bi-info-circle-fill"></i> Estás contactando al agente sobre esta propiedad.
        </div>
        <form asp-controller="Mensajes" asp-action="Create" method="post">
            <div class="mb-3">
                <textarea class="form-control" name="Mensaje" rows="3"
                          placeholder="Escribe tu mensaje aquí..." required></textarea>
            </div>
            <input type="hidden" name="DestinatarioID" value="@Model.PropiedadesModel.AgenteID">
            <input type="hidden" name="PropiedadID" value="@Model.PropiedadesModel.PropiedadID">
            <button type="submit" class="btn btn-primary w-100">Enviar mensaje</button>
        </form>
    </div>
</div>

<!-- JS de Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Funciones para el chat
    function abrirChat() {
        const chatWindow = document.getElementById('chatWindow');
        chatWindow.classList.add('show');
    }

    function cerrarChat() {
        const chatWindow = document.getElementById('chatWindow');
        chatWindow.classList.remove('show');
    }

    // Formatear el input de precio
    document.addEventListener('DOMContentLoaded', function () {
        const offerInput = document.getElementById('offerAmount');
        if (offerInput) {
            offerInput.addEventListener('focus', function () {
                this.value = this.value.replace(/,/g, '');
            });

            offerInput.addEventListener('blur', function () {
                if (this.value) {
                    this.value = parseFloat(this.value).toLocaleString('en-US');
                }
            });
        }
    });
</script>