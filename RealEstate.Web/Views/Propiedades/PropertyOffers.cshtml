@using RealEstate.Persistance.Models.ViewModel
@model List<OfertasViewModel>

<!-- Hero Section with Cover Image -->
<div class="hero-cover" style="background-image: url('https://images.unsplash.com/photo-1560518883-ce09059eeffa?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');">
    <div class="hero-overlay">
        <div class="container text-center py-5">
            <h1 class="display-3 fw-bold text-white mb-3">
                <i class="fas fa-handshake me-3"></i>Gestión de Ofertas
            </h1>
            <p class="lead text-white mb-4">
                Administra y revisa todas las ofertas recibidas para tus propiedades
            </p>
            <div class="stats-badge">
                <span class="badge bg-white text-primary fs-6 px-4 py-2 shadow">
                    <i class="fas fa-chart-line me-2"></i>
                    @Model.Count Ofertas Recibidas
                </span>
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container my-5">
    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var offer in Model)
            {
                var imagenPropiedad = !string.IsNullOrEmpty(offer.Imagen)
                ? Url.Content(offer.Imagen)
                : "https://via.placeholder.com/600x400?text=Imagen+no+disponible";

                <div class="col">
                    <div class="offer-card h-100">
                        <div class="offer-header">
                            @if (!string.IsNullOrEmpty(offer.FotoCliente))
                            {
                                <img src="@offer.FotoCliente" alt="Foto del cliente" class="client-photo">
                            }
                            else
                            {
                                <div class="client-photo placeholder">
                                    <span>@offer.NombreCliente.Substring(0, 1)@offer.ApellidoCliente.Substring(0, 1)</span>
                                </div>
                            }
                            <div class="client-info">
                                <h3 class="client-name">@offer.NombreCliente @offer.ApellidoCliente</h3>
                                <span class="offer-date">@offer.FechaOferta.ToString("dd MMM yyyy")</span>
                            </div>
                            <span class="status-badge @offer.Estado.ToLower()">
                                <i class="fas @(offer.Estado == "Activo" ? "fa-check-circle" : offer.Estado == "Pendiente" ? "fa-clock" : "fa-times-circle") me-1"></i>
                                @offer.Estado
                            </span>
                        </div>

                        <div class="offer-body">
                            <div class="property-info">
                                <div class="property-image position-relative"
                                     style="background-image: url('@imagenPropiedad'); height: 180px; background-size: cover; background-position: center;">
                                    <span class="property-code badge bg-dark position-absolute bottom-0 start-0 m-2 px-3 py-1 fs-6">@offer.Codigo</span>
                                </div>
                            </div>

                            <div class="offer-meta">
                                <div class="meta-item">
                                    <i class="fas fa-calendar-alt text-primary"></i>
                                    <span>@offer.FechaOferta.ToString("dd MMM yyyy")</span>
                                </div>
                                <div class="meta-item">
                                    <i class="fas fa-map-marker-alt text-danger"></i>
                                    <span>Ciudad Ejemplo</span>
                                </div>
                            </div>
                        </div>

                        <div class="offer-actions">
                            <a href="@Url.Action("OffersByUser", new { propiedadId = offer.PropiedadID, clienteId = offer.ClienteID })" class="action-button view">
                                <i class="fas fa-eye me-2"></i>Ver Ofertas
                            </a>
                        </div>
                    </div>
                </div>
            }

        </div>
    }
    else
    {
        <div class="empty-state text-center py-5">
            <div class="empty-icon">
                <i class="fas fa-inbox fa-4x text-primary mb-4"></i>
            </div>
            <h3 class="text-dark mb-3">No hay ofertas recibidas</h3>
            <p class="text-muted mb-4">Actualmente no tienes ninguna oferta para mostrar</p>
            <button class="btn btn-primary px-4">
                <i class="fas fa-sync-alt me-2"></i>Actualizar
            </button>
        </div>
    }
</div>

<style>
    /* Hero Section Styles */
    .hero-cover {
        position: relative;
        background-size: cover;
        background-position: center;
        height: 350px;
        margin-bottom: 3rem;
        box-shadow: inset 0 -10px 20px rgba(0,0,0,0.1);
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(41, 53, 86, 0.85);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .stats-badge {
        margin-top: 1.5rem;
    }

    /* Offer Card Styles */
    .offer-card {
        font-family: 'Poppins', sans-serif;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        background: white;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        height: 100%;
        border: none;
    }

        .offer-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.12);
        }

    .offer-header {
        display: flex;
        align-items: center;
        padding: 20px;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        position: relative;
        border-bottom: 1px solid rgba(0,0,0,0.05);
    }

    .client-photo {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid white;
        margin-right: 15px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }

        .client-photo.placeholder {
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            color: white;
            font-weight: bold;
            font-size: 1.2rem;
        }

    .client-info {
        flex-grow: 1;
    }

    .client-name {
        margin: 0;
        color: #2c3e50;
        font-size: 1.1rem;
        font-weight: 600;
    }

    .offer-date {
        font-size: 0.8rem;
        color: #7f8c8d;
    }

    .status-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

        .status-badge.activo {
            background-color: rgba(46, 204, 113, 0.15);
            color: #27ae60;
        }

        .status-badge.pendiente {
            background-color: rgba(243, 156, 18, 0.15);
            color: #f39c12;
        }

        .status-badge.rechazado {
            background-color: rgba(231, 76, 60, 0.15);
            color: #e74c3c;
        }

    .property-image {
        position: relative;
        overflow: hidden;
    }

    .property-image-bg {
        background-size: cover;
        background-position: center;
        transition: all 0.3s ease;
    }

    .property-image img[style*="display: none"] + .property-image-bg {
        background-image: none !important;
    }
    .offer-body {
        padding: 0;
    }

    .property-info {
        position: relative;
    }

    .property-image {
        height: 150px;
        background-size: cover;
        background-position: center;
        position: relative;
    }

    .property-code {
        position: absolute;
        bottom: 10px;
        left: 10px;
        background: rgba(0,0,0,0.7);
        color: white;
        padding: 3px 10px;
        border-radius: 4px;
        font-size: 0.8rem;
    }

    .offer-meta {
        padding: 15px;
        display: flex;
        justify-content: space-between;
        border-bottom: 1px solid #f1f1f1;
    }

    .meta-item {
        display: flex;
        align-items: center;
        font-size: 0.85rem;
        color: #7f8c8d;
    }

        .meta-item i {
            margin-right: 5px;
            font-size: 0.9rem;
        }

    .offer-actions {
        display: flex;
        padding: 15px;
        gap: 10px;
    }

    .action-button {
        flex: 1;
        padding: 10px;
        border: none;
        border-radius: 6px;
        font-weight: 500;
        font-size: 0.85rem;
        cursor: pointer;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
    }

        .action-button.view {
            background-color: #3498db;
            color: white;
        }

        .action-button.contact {
            background-color: #f8f9fa;
            color: #495057;
            border: 1px solid #e9ecef;
        }

        .action-button:hover {
            opacity: 0.9;
            transform: translateY(-2px);
            box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        }

    /* Empty State Styles */
    .empty-state {
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 3rem;
        border: 1px dashed #dee2e6;
    }

    .empty-icon {
        color: #e9ecef;
        margin-bottom: 1.5rem;
    }

    /* Responsive Styles */
    @@media (max-width: 768px) {
        .hero-cover {
            height: 280px;
        }

        .hero-overlay h1 {
            font-size: 2.2rem;
        }

        .client-photo {
            width: 50px;
            height: 50px;
        }

        .offer-actions {
            flex-direction: column;
        }
    }

    /* Animation */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .offer-card {
        animation: fadeIn 0.5s ease forwards;
    }

        /* Delay animations for each card */
        .offer-card:nth-child(1) {
            animation-delay: 0.1s;
        }

        .offer-card:nth-child(2) {
            animation-delay: 0.2s;
        }

        .offer-card:nth-child(3) {
            animation-delay: 0.3s;
        }

        .offer-card:nth-child(4) {
            animation-delay: 0.4s;
        }

        .offer-card:nth-child(5) {
            animation-delay: 0.5s;
        }
</style>

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

