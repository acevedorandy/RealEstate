@using RealEstate.Persistance.Models.ViewModel
@model List<OfertasViewModel>

<div class="offers-container">
    <div class="hero-section text-center mb-5">
        <div class="header-container p-4 rounded-3 shadow-sm" style="background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);">
            <h1 class="display-4 fw-bold text-white mb-3">
                <i class="fas fa-handshake me-3"></i>Gestión de Ofertas
            </h1>
            <p class="lead text-white-50 mb-0">
                Revisa y administra todas las ofertas recibidas para tus propiedades
            </p>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var offer in Model)
            {
                <div class="col">
                    <div class="offer-card h-100">
                        <div class="offer-header">
                            @if (!string.IsNullOrEmpty(offer.FotoCliente))
                            {
                                <img src="@offer.FotoCliente" alt="Foto del cliente" class="client-photo">
                            }
                            else
                            {
                                <div class="client-photo placeholder">@offer.NombreCliente.Substring(0, 1)@offer.ApellidoCliente.Substring(0, 1)</div>
                            }
                            <div class="client-info">
                                <h3 class="client-name">@offer.NombreCliente @offer.ApellidoCliente</h3>
                                <span class="offer-date">@offer.FechaOferta.ToString("dd MMM yyyy")</span>
                            </div>
                            <span class="status-badge @offer.Estado.ToLower()">@offer.Estado</span>
                        </div>

                        <div class="offer-details">
                            <div class="detail-item">
                                <span class="detail-label">Codigo Propiedad:</span>
                                <span class="detail-value">@offer.Codigo</span>
                            </div>
                        </div>

                        <div class="offer-actions">
                            <a href="@Url.Action("OffersByUser", new { propiedadId = offer.PropiedadID, clienteId = offer.ClienteID })" class="action-button view">
                                <i class="fas fa-eye me-2"></i>Ver Todas Las Ofertas Del Usuario
                            </a>
                        </div>

                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state text-center py-5">
            <i class="fas fa-inbox fa-4x text-muted mb-4"></i>
            <h3 class="text-dark mb-3">No hay ofertas recibidas</h3>
            <p class="text-muted">Actualmente no tienes ninguna oferta para mostrar</p>
        </div>
    }
</div>

<style>
    .offers-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .header-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
    }

    .offer-card {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        background: white;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

        .offer-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 20px rgba(0, 0, 0, 0.15);
        }

    .offer-header {
        display: flex;
        align-items: center;
        padding: 20px;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        position: relative;
    }

    .client-photo {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid white;
        margin-right: 15px;
    }

        .client-photo.placeholder {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #3498db;
            color: white;
            font-weight: bold;
            font-size: 1.2rem;
        }

    .client-info {
        flex-grow: 1;
    }

    .client-name {
        margin: 0;
        color: #2c3e50;
        font-size: 1.2rem;
    }

    .offer-date {
        font-size: 0.85rem;
        color: #7f8c8d;
    }

    .status-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: bold;
        text-transform: uppercase;
    }

        .status-badge.activo {
            background-color: #2ecc71;
            color: white;
        }

        .status-badge.pendiente {
            background-color: #f39c12;
            color: white;
        }

        .status-badge.rechazado {
            background-color: #e74c3c;
            color: white;
        }

    .offer-details {
        padding: 20px;
        border-bottom: 1px solid #ecf0f1;
        flex-grow: 1;
    }

    .detail-item {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
    }

    .detail-label {
        font-weight: 600;
        color: #7f8c8d;
    }

    .detail-value {
        color: #2c3e50;
    }

    .offer-actions {
        display: flex;
        padding: 15px;
    }

    .action-button {
        flex: 1;
        padding: 10px;
        border: none;
        border-radius: 6px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .action-button.view {
            background-color: #3498db;
            color: white;
            margin-right: 10px;
        }

        .action-button.contact {
            background-color: #9b59b6;
            color: white;
        }

        .action-button:hover {
            opacity: 0.9;
            transform: translateY(-2px);
        }

    .empty-state {
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 3rem;
    }

    @@media (max-width: 768px) {
        .header-container {
            padding: 1.5rem;
        }

        .client-photo {
            width: 50px;
            height: 50px;
        }

        .client-name {
            font-size: 1rem;
        }
    }
</style>