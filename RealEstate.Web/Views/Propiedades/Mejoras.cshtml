@model List<RealEstate.Persistance.Models.dbo.MejorasModel>

@{
    ViewBag.Title = "Listado de Mejoras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section with Cover Image -->
<div class="hero-section bg-dark position-relative mb-5">
    <img src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
         class="hero-img w-100"
         alt="Mejoras de propiedades"
         style="height: 300px; object-fit: cover; opacity: 0.7;">
    <div class="hero-content position-absolute top-50 start-50 translate-middle text-center text-white w-100 px-3">
        <h1 class="display-5 fw-bold mb-3"><i class="fas fa-tools me-2"></i> Mejoras de Propiedades</h1>
        <p class="lead mb-4">Asigna mejoras y actualizaciones para aumentar el valor de tus propiedades</p>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="container">
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle me-3 fs-4"></i>
                <div>@TempData["SuccessMessage"]</div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="container">
        <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-triangle me-3 fs-4"></i>
                <div>@TempData["ErrorMessage"]</div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

<div class="container py-3">
    <div class="card border-0 shadow-lg">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
                    <i class="fas fa-home me-2"></i>Asignar Mejora a Propiedad
                </h3>
                <span class="badge bg-light text-primary fs-6">@Model.Count Mejoras Disponibles</span>
            </div>
        </div>

        <div class="card-body">
            <form method="post" asp-action="AsignarMejora" class="needs-validation" novalidate>
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-floating">
                            @Html.DropDownList("PropiedadID", ViewBag.Propiedad as IEnumerable<SelectListItem>, "-- Selecciona una Propiedad --",
                                     new { @class = "form-select", required = "required", id = "propiedadSelect" })
                            <label for="propiedadSelect" class="form-label">Propiedad</label>
                            <div class="invalid-feedback">
                                Por favor selecciona una propiedad
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 d-flex align-items-end">
                        <div class="form-text">
                            <i class="fas fa-info-circle text-primary me-1"></i> Selecciona la propiedad a la que asignarás mejoras
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <h5 class="mb-4 text-secondary">
                    <i class="fas fa-list-check me-2"></i>Catálogo de Mejoras Disponibles
                </h5>

                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Mejora</th>
                                <th>Descripción</th>
                                <th class="text-end pe-4">Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Count > 0)
                            {
                                foreach (var item in Model)
                                {
                                    <tr class="position-relative">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="icon-circle bg-primary-light me-3">
                                                    <i class="fas fa-hammer text-primary"></i>
                                                </div>
                                                <span class="fw-medium">@item.Nombre</span>
                                            </div>
                                        </td>
                                        <td class="text-muted">@(string.IsNullOrEmpty(item.Descripcion) ? "Sin descripción" : item.Descripcion)</td>
                                        <td class="text-end pe-4">
                                            <button type="submit" name="mejoraId" value="@item.MejoraID"
                                                    class="btn btn-primary rounded-pill px-3 py-1 btn-sm btn-assign">
                                                <i class="fas fa-plus me-1"></i> Asignar
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-5">
                                        <div class="empty-state">
                                            <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                                            <h5 class="text-muted">No hay mejoras registradas</h5>
                                            <p class="text-muted">Actualmente no hay mejoras disponibles para asignar</p>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .hero-section {
        overflow: hidden;
        border-radius: 0 0 12px 12px;
    }

    .hero-img {
        transition: transform 0.5s ease;
    }

    .hero-section:hover .hero-img {
        transform: scale(1.03);
    }

    .hero-content {
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    .card {
        border-radius: 12px;
        overflow: hidden;
        margin-top: -50px;
        position: relative;
        z-index: 1;
        background-color: white;
    }

    .icon-circle {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .bg-primary-light {
        background-color: rgba(13, 110, 253, 0.1);
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        transform: translateY(-1px);
        transition: all 0.2s ease;
    }

    .btn-assign {
        transition: all 0.3s ease;
    }

        .btn-assign:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .empty-state {
        opacity: 0.7;
    }

    .form-floating > .form-select {
        padding-top: 1.625rem;
        padding-bottom: 0.625rem;
    }

    @@media (max-width: 768px) {
        .hero-content h1 {
            font-size: 2rem;
        }

        .hero-content p {
            font-size: 1rem;
        }

        .card {
            margin-top: -30px;
        }
    }
</style>

@section Scripts {
    <script>
        // Validación del formulario
        (function () {
            'use strict'

            const forms = document.querySelectorAll('.needs-validation')

            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
        })()

        // Efecto al pasar el ratón sobre las filas
        document.querySelectorAll('.table-hover tbody tr').forEach(row => {
            row.style.transition = 'all 0.2s ease';
        });
    </script>
}