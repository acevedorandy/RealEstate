@model List<RealEstate.Persistance.Models.dbo.MejorasModel>

@{
    ViewBag.Title = "Listado de Mejoras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-primary">Asignar Mejora a Propiedad</h3>
    </div>

    <form method="post" asp-action="AsignarMejora">
        <div class="row mb-4">
            <div class="col-md-6">
                <label for="PropiedadID" class="form-label">Selecciona una Propiedad</label>
                @Html.DropDownList("PropiedadID", ViewBag.Propiedad as IEnumerable<SelectListItem>, "-- Selecciona --", new { @class = "form-select" })
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm rounded-3">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th class="text-end">Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MejoraID</td>
                                <td>@item.Nombre</td>
                                <td>@item.Descripcion</td>
                                <td class="text-end">
                                    <button type="submit" name="mejoraId" value="@item.MejoraID" class="btn btn-sm btn-primary">
                                        Asignar
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">No hay mejoras registradas.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>
</div>
