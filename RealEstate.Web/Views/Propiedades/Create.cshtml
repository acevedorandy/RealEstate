                                <div class="col-md-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" asp-for="TieneGimnasio" />
                                        <label class="form-check-label fw-semibold" asp-for="TieneGimnasio">Gimnasio</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" asp-for="TieneAreaJuegosInfantiles" />
                                        <label class="form-check-label fw-semibold" asp-for="TieneAreaJuegosInfantiles">Área de juegos infantiles</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" asp-for="TieneParqueoVisitas" />
                                        <label class="form-check-label fw-semibold" asp-for="TieneParqueoVisitas">Parqueo para visitas</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" asp-for="TieneSeguridadPrivada" />
                                        <label class="form-check-label fw-semibold" asp-for="TieneSeguridadPrivada">Seguridad privada</label>
                                    </div>
                                </div>
                            </div>
                        </div> *@

                        <!-- Sección 6: Imágenes -->
                        <div class="mb-4">
                            <h4 class="text-primary mb-3"><i class="fas fa-images me-2"></i>Imágenes de la Propiedad</h4>
                            <div class="border rounded-3 p-3 bg-light">
                                <label asp-for="Files" class="form-label fw-semibold">Seleccione imágenes (múltiples)</label>
                                <input asp-for="Files" type="file" class="form-control" multiple accept="image/*" />
                                <div class="form-text">Suba fotos de alta calidad que muestren la propiedad (máx. 10MB cada una)</div>
                                <span asp-validation-for="Files" class="text-danger small"></span>

                                <div class="mt-3" id="imagePreviewContainer" style="display: none;">
                                    <h6 class="text-muted">Vista previa:</h6>
                                    <div class="d-flex flex-wrap gap-2" id="imagePreviews"></div>
                                </div>
                            </div>
                        </div>

                        <!-- Botón de envío -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <button type="submit" class="btn btn-primary btn-lg px-4 me-md-2">
                                <i class="fas fa-save me-2"></i>Guardar Propiedad
                            </button>
                            <button type="reset" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-eraser me-2"></i>Limpiar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Vista previa de imágenes antes de subir
        document.getElementById('Files').addEventListener('change', function (event) {
            const previewContainer = document.getElementById('imagePreviewContainer');
            const previewsContainer = document.getElementById('imagePreviews');

            previewsContainer.innerHTML = '';

            if (this.files.length > 0) {
                previewContainer.style.display = 'block';

                for (let file of this.files) {
                    if (file.type.startsWith('image/')) {
                        const reader = new FileReader();

                        reader.onload = function (e) {
                            const img = document.createElement('img');
                            img.src = e.target.result;
                            img.style.maxWidth = '120px';
                            img.style.maxHeight = '90px';
                            img.className = 'img-thumbnail';
                            previewsContainer.appendChild(img);
                        }

                        reader.readAsDataURL(file);
                    }
                }
            } else {
                previewContainer.style.display = 'none';
            }
        });

        // Validación para campos numéricos
        document.querySelectorAll('input[type="number"]').forEach(input => {
            input.addEventListener('change', function () {
                if (this.value < 0) {
                    this.value = 0;
                }
            });
        });
    </script>
}

