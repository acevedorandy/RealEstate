@model RealEstate.Application.Dtos.dbo.PropiedadesDto

@{
    ViewData["Title"] = "Crear Nueva Propiedad";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white py-3 rounded-top">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="h4 mb-0"><i class="fas fa-home me-2"></i>Nueva Propiedad</h2>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i> Volver al listado
                        </a>
                    </div>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Sección 1: Información Básica -->
                        <div class="mb-4">
                            <h4 class="text-primary mb-3"><i class="fas fa-info-circle me-2"></i>Información Básica</h4>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="Titulo" class="form-label fw-semibold"></label>
                                    <input asp-for="Titulo" class="form-control form-control-lg" placeholder="Ej: Acogedora casa en zona residencial" />
                                    <span asp-validation-for="Titulo" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Precio" class="form-label fw-semibold"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Precio" class="form-control form-control-lg" placeholder="Ej: 250000" />
                                    </div>
                                    <span asp-validation-for="Precio" class="text-danger small"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="Descripcion" class="form-label fw-semibold"></label>
                                    <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Describa la propiedad en detalle..."></textarea>
                                    <span asp-validation-for="Descripcion" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Sección 2: Ubicación -->
                        <div class="mb-4">
                            <h4 class="text-primary mb-3"><i class="fas fa-map-marker-alt me-2"></i>Ubicación</h4>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="Direccion" class="form-label fw-semibold"></label>
                                    <input asp-for="Direccion" class="form-control" placeholder="Ej: Calle Principal #123" />
                                    <span asp-validation-for="Direccion" class="text-danger small"></span>
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="Ciudad" class="form-label fw-semibold"></label>
                                    <input asp-for="Ciudad" class="form-control" placeholder="Ej: Ciudad Ejemplo" />
                                    <span asp-validation-for="Ciudad" class="text-danger small"></span>
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="Sector" class="form-label fw-semibold"></label>
                                    <input asp-for="Sector" class="form-control" placeholder="Ej: Zona Norte" />
                                    <span asp-validation-for="Sector" class="text-danger small"></span>
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="CodigoPostal" class="form-label fw-semibold"></label>
                                    <input asp-for="CodigoPostal" class="form-control" placeholder="Ej: 12345" />
                                    <span asp-validation-for="CodigoPostal" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Sección 3: Características Principales -->
                        <div class="mb-4">
                            <h4 class="text-primary mb-3"><i class="fas fa-ruler-combined me-2"></i>Características Principales</h4>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label asp-for="TipoPropiedad" class="form-label fw-semibold">Tipo de Propiedad</label>
                                    <select asp-for="TipoPropiedad" asp-items="@ViewBag.TiposPropiedad" class="form-select" required>
                                        <option value="" selected disabled>Seleccione un tipo</option>
                                    </select>
                                    <span asp-validation-for="TipoPropiedad" class="text-danger small"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="TotalNivel" class="form-label fw-semibold">Niveles</label>
                                    <input asp-for="TotalNivel" class="form-control" placeholder="Ej: 2" />
                                    <span asp-validation-for="TotalNivel" class="text-danger small"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="Piso" class="form-label fw-semibold">Piso</label>
                                    <input asp-for="Piso" class="form-control" placeholder="Ej: 3 (para apartamentos)" />
                                    <span asp-validation-for="Piso" class="text-danger small"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="AñoConstruccion" class="form-label fw-semibold">Año de Construcción</label>
                                    <input asp-for="AñoConstruccion" class="form-control" placeholder="Ej: 2015" />
                                    <span asp-validation-for="AñoConstruccion" class="text-danger small"></span>
                                </div>
                                <div class="col-md-4 d-flex align-items-center">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" role="switch" asp-for="Disponibilidad" checked />
                                        <label class="form-check-label fw-semibold" asp-for="Disponibilidad">Disponible</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Sección 4: Habitaciones y Espacios -->
                        <div class="mb-4">
                            <h4 class="text-primary mb-3"><i class="fas fa-bed me-2"></i>Habitaciones y Espacios</h4>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label asp-for="Habitaciones" class="form-label fw-semibold">N° de Habitaciones</label>
                                    <input asp-for="Habitaciones" class="form-control" placeholder="Ej: 3" min="0" />
                                    <span asp-validation-for="Habitaciones" class="text-danger small"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="Baños" class="form-label fw-semibold">N° de Baños</label>
                                    <input asp-for="Baños" class="form-control" placeholder="Ej: 2" min="0" step="0.5" />
                                    <span asp-validation-for="Baños" class="text-danger small"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="Parqueos" class="form-label fw-semibold">Espacios de Parqueo</label>
                                    <input asp-for="Parqueos" class="form-control" placeholder="Ej: 1" min="0" />
                                    <span asp-validation-for="Parqueos" class="text-danger small"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="TamañoTerreno" class="form-label fw-semibold">Área Construida (m²)</label>
                                    <input asp-for="TamañoTerreno" class="form-control" placeholder="Ej: 120" min="0" />
                                    <span asp-validation-for="TamañoTerreno" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

