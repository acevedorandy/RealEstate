                            <h4 class="text-primary mb-3"><i class="fas fa-star me-2"></i>Amenidades</h4>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" asp-for="TienePiscina" />
                                        <label class="form-check-label fw-semibold" asp-for="TienePiscina">Piscina</label>
                                    </div>
