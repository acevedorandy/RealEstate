@using RealEstate.Persistance.Models.ViewModel
@model List<OfertasViewModel>

<div class="offers-container">
    <div class="hero-section text-center mb-5">
        <div class="header-container p-4 rounded-3 shadow-sm" style="background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);">
            <h1 class="display-4 fw-bold text-white mb-3">
                <i class="fas fa-paper-plane me-3"></i>Mis Ofertas Realizadas
            </h1>
            <p class="lead text-white-50 mb-0">
                Revisa el estado de todas las ofertas que has realizado
            </p>
        </div>
    </div>

    @if (Model.Any())
    {
        @Html.AntiForgeryToken()

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var offer in Model)
            {
                <div class="col">
                    <div class="offer-card h-100">
                        <div class="offer-header">
                            <div class="client-photo placeholder bg-secondary">
                                <i class="fas fa-home"></i>
                            </div>
                            <div class="client-info">
                                <h3 class="client-name">Propiedad #@offer.PropiedadID</h3>
                                <span class="offer-date">@offer.FechaOferta.ToString("dd MMM yyyy")</span>
                                <div class="offer-amount mt-2">
                                    <span class="badge bg-primary">$@offer.Cifra.ToString("N0")</span>
                                </div>
                            </div>
                            <span class="status-badge @offer.Estado.ToLower()">@offer.Estado</span>
                        </div>

                        <div class="offer-details">
                            <div class="detail-item">
                                <span class="detail-label">ID Oferta:</span>
                                <span class="detail-value">@offer.OfertaID</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Estado:</span>
                                <span class="detail-value text-@(offer.Estado.ToLower() == "aceptada" ? "success" : offer.Estado.ToLower() == "rechazada" ? "danger" : "warning")">
                                    @offer.Estado
                                </span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Fecha:</span>
                                <span class="detail-value">@offer.FechaOferta.ToString("g")</span>
                            </div>
                        </div>

                        <div class="offer-actions">
                            @if (offer.Estado.ToLower() == "pendiente")
                            {
                                <button class="btn btn-sm btn-success me-2"
                                        data-bs-toggle="modal"
                                        data-bs-target="#confirmModal"
                                        data-bs-ofertaid="@offer.OfertaID"
                                        data-bs-propiedadid="@offer.PropiedadID">
                                    Aceptar
                                </button>

                                <button class="btn btn-sm btn-danger"
                                        data-bs-toggle="modal"
                                        data-bs-target="#rejectModal"
                                        data-bs-ofertaid="@offer.OfertaID"
                                        data-bs-propiedadid="@offer.PropiedadID">
                                    <i class="fas fa-times me-1"></i>Rechazar
                                </button>

                            }
                            else
                            {
                                <button class="action-button disabled" disabled>
                                    @(offer.Estado.ToLower() == "aceptada" ? "Oferta Aceptada" : "Oferta Rechazada")
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    else
    {
        <div class="empty-state text-center py-5">
            <i class="fas fa-inbox fa-4x text-muted mb-4"></i>
            <h3 class="text-dark mb-3">No has realizado ofertas</h3>
            <p class="text-muted">No encontramos ofertas realizadas por ti</p>
            <a href="@Url.Action("Index", "Propiedades")" class="btn btn-primary mt-3">
                <i class="fas fa-search me-2"></i>Buscar Propiedades
            </a>
        </div>
    }
</div>

<!-- Modal para aceptar oferta -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="confirmModalLabel">Confirmar Aceptación</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro que deseas aceptar esta oferta?</p>
                <p class="fw-bold text-success">Esta acción no se puede deshacer.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <input type="hidden" name="OfertaID" value=""/>
                <button type="button" class="btn btn-success" id="confirmAccept">Sí, Aceptar Oferta</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para rechazar oferta -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="rejectModalLabel">Confirmar Rechazo</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro que deseas rechazar esta oferta?</p>
                <p class="fw-bold text-danger">Esta acción no se puede deshacer.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <input type="hidden" name="OfertaID" />
                <button type="button" class="btn btn-danger" id="confirmReject">Sí, Rechazar Oferta</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Usamos un objeto para manejar el estado de las ofertas
            const offerManager = {
                currentOfertaId: null,
                currentPropiedadId: null,

                init: function () {
                    $(document).on('click', '[data-bs-ofertaid]', function () {
                        offerManager.currentOfertaId = $(this).data('bs-ofertaid');
                        offerManager.currentPropiedadId = $(this).data('bs-propiedadid'); // <- NUEVO
                        console.log("Oferta ID capturada:", offerManager.currentOfertaId);
                        console.log("Propiedad ID capturada:", offerManager.currentPropiedadId); // <- NUEVO
                    });

                    $('#confirmAccept').click(offerManager.handleAccept);
                    $('#confirmReject').click(offerManager.handleReject);
                },

                handleAccept: function () {
                    offerManager.processOffer('Aceptada');
                },

                handleReject: function () {
                    offerManager.processOffer('Rechazada');
                },

                processOffer: function (estado) {
                    if (!offerManager.currentOfertaId) {
                        alert('No se ha seleccionado una oferta.');
                        return;
                    }

                    console.log(`Enviando ID de oferta para ${estado}:`, offerManager.currentOfertaId);
                    console.log(`Propiedad ID:`, offerManager.currentPropiedadId);

                    $.ajax({
                        url: '@Url.Action("ConfirmarOrRechazarOferta", "Ofertas")',
                        type: 'POST',
                        data: {
                            ofertaid: offerManager.currentOfertaId,
                            propiedadid: offerManager.currentPropiedadId, 
                            estado: estado
                        },
                        headers: {
                            'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function (response) {
                            if (response.success) {
                                location.reload();
                            } else {
                                alert(`Error al ${estado.toLowerCase()} la oferta: ${response.message}`);
                            }
                        },
                        error: function (xhr, status, error) {
                            alert(`Error al comunicarse con el servidor: ${error}`);
                        }
                    });
                }
            };
            // ⬇️ Esto faltaba
            offerManager.init();
        }); // 
    </script>
}

<style>
