@using RealEstate.Persistance.Models.ViewModel
@model List<OfertasViewModel>

<!-- Hero Section with Cover Image -->
<div class="hero-cover" style="background-image: url('https://images.unsplash.com/photo-1560518883-ce09059eeffa?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');">
    <div class="hero-overlay">
        <div class="container text-center py-5">
            <h1 class="display-3 fw-bold text-white mb-3">
                <i class="fas fa-paper-plane me-3"></i>Ofertas Recibidas por Usuarios
            </h1>
            <p class="lead text-white mb-4">
                Gestiona todas las ofertas que han realizado los usuarios
            </p>
            <div class="stats-badge">
                <span class="badge bg-white text-primary fs-6 px-4 py-2 shadow">
                    <i class="fas fa-chart-line me-2"></i>
                    @Model.Count Ofertas Recibidas
                </span>
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container my-5">
    @if (Model.Any())
    {
        @Html.AntiForgeryToken()

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var offer in Model)
            {
                <div class="col">
                    <div class="offer-card h-100">
                        <div class="offer-header">
                            <div class="client-photo placeholder" style="background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);">
                                <i class="fas fa-home"></i>
                            </div>
                            <div class="client-info">
                                <h3 class="client-name">Propiedad #@offer.PropiedadID</h3>
                                <span class="offer-date">@offer.FechaOferta.ToString("dd MMM yyyy")</span>
                                <div class="offer-amount mt-2">
                                    <span class="badge bg-primary">$@offer.Cifra.ToString("N0")</span>
                                </div>
                            </div>
                            <span class="status-badge @offer.Estado.ToLower()">
                                <i class="fas @(offer.Estado.ToLower() == "aceptada" ? "fa-check-circle" : offer.Estado.ToLower() == "rechazada" ? "fa-times-circle" : "fa-clock") me-1"></i>
                                @offer.Estado
                            </span>
                        </div>

                        <div class="offer-body">
                            <div class="offer-details">
                                <div class="detail-item">
                                    <span class="detail-label"><i class="fas fa-hashtag me-2"></i>ID Oferta:</span>
                                    <span class="detail-value">@offer.OfertaID</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label"><i class="fas fa-info-circle me-2"></i>Estado:</span>
                                    <span class="detail-value text-@(offer.Estado.ToLower() == "aceptada" ? "success" : offer.Estado.ToLower() == "rechazada" ? "danger" : "warning")">
                                        @offer.Estado
                                    </span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label"><i class="fas fa-calendar-alt me-2"></i>Fecha:</span>
                                    <span class="detail-value">@offer.FechaOferta.ToString("g")</span>
                                </div>
                            </div>
                        </div>

                        <div class="offer-actions">
                            @if (offer.Estado.ToLower() == "pendiente")
                            {
                                <button class="btn btn-success me-2"
                                        data-bs-toggle="modal"
                                        data-bs-target="#confirmModal"
                                        data-bs-ofertaid="@offer.OfertaID"
                                        data-bs-propiedadid="@offer.PropiedadID">
                                    <i class="fas fa-check me-1"></i>Aceptar
                                </button>

                                <button class="btn btn-outline-danger"
                                        data-bs-toggle="modal"
                                        data-bs-target="#rejectModal"
                                        data-bs-ofertaid="@offer.OfertaID"
                                        data-bs-propiedadid="@offer.PropiedadID">
                                    <i class="fas fa-times me-1"></i>Rechazar
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-outline-secondary disabled" disabled>
                                    @(offer.Estado.ToLower() == "aceptada" ? "Oferta Aceptada" : "Oferta Rechazada")
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state text-center py-5">
            <div class="empty-icon">
                <i class="fas fa-inbox fa-4x text-primary mb-4"></i>
            </div>
            <h3 class="text-dark mb-3">No has recibido ofertas</h3>
            <p class="text-muted mb-4">Actualmente no tienes ofertas realizadas por usuarios</p>
            <a href="@Url.Action("Index", "Propiedades")" class="btn btn-primary px-4">
                <i class="fas fa-search me-2"></i>Buscar Propiedades
            </a>
        </div>
    }
</div>

<!-- Modal para aceptar oferta -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="confirmModalLabel"><i class="fas fa-check-circle me-2"></i>Confirmar Aceptación</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-success" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <strong>¿Estás seguro que deseas aceptar esta oferta?</strong>
                </div>
                <p class="text-muted">Esta acción no se puede deshacer y notificará al usuario sobre tu decisión.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                <input type="hidden" name="OfertaID" value="" />
                <button type="button" class="btn btn-success" id="confirmAccept">
                    <i class="fas fa-check me-1"></i>Sí, Aceptar Oferta
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para rechazar oferta -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="rejectModalLabel"><i class="fas fa-times-circle me-2"></i>Confirmar Rechazo</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <strong>¿Estás seguro que deseas rechazar esta oferta?</strong>
                </div>
                <p class="text-muted">Esta acción no se puede deshacer y notificará al usuario sobre tu decisión.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                <input type="hidden" name="OfertaID" />
                <button type="button" class="btn btn-danger" id="confirmReject">
                    <i class="fas fa-times me-1"></i>Sí, Rechazar Oferta
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Usamos un objeto para manejar el estado de las ofertas
            const offerManager = {
                currentOfertaId: null,
                currentPropiedadId: null,

                init: function () {
                    $(document).on('click', '[data-bs-ofertaid]', function () {
                        offerManager.currentOfertaId = $(this).data('bs-ofertaid');
                        offerManager.currentPropiedadId = $(this).data('bs-propiedadid');
                        console.log("Oferta ID capturada:", offerManager.currentOfertaId);
                        console.log("Propiedad ID capturada:", offerManager.currentPropiedadId);
                    });

                    $('#confirmAccept').click(offerManager.handleAccept);
                    $('#confirmReject').click(offerManager.handleReject);
                },

                handleAccept: function () {
                    offerManager.processOffer('Aceptada');
                },

                handleReject: function () {
                    offerManager.processOffer('Rechazada');
                },

                processOffer: function (estado) {
                    if (!offerManager.currentOfertaId) {
                        alert('No se ha seleccionado una oferta.');
                        return;
                    }

                    console.log(`Enviando ID de oferta para ${estado}:`, offerManager.currentOfertaId);
                    console.log(`Propiedad ID:`, offerManager.currentPropiedadId);

                    $.ajax({
                        url: '@Url.Action("ConfirmarOrRechazarOferta", "Ofertas")',
                        type: 'POST',
                        data: {
                            ofertaid: offerManager.currentOfertaId,
                            propiedadid: offerManager.currentPropiedadId,
                            estado: estado
                        },
                        headers: {
                            'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function (response) {
                            if (response.success) {
                                location.reload();
                            } else {
                                alert(`Error al ${estado.toLowerCase()} la oferta: ${response.message}`);
                            }
                        },
                        error: function (xhr, status, error) {
                            alert(`Error al comunicarse con el servidor: ${error}`);
                        }
                    });
                }
            };

            offerManager.init();
        });
    </script>
}

<style>
    /* Hero Section Styles */
    .hero-cover {
        position: relative;
        background-size: cover;
        background-position: center;
        height: 350px;
        margin-bottom: 3rem;
        box-shadow: inset 0 -10px 20px rgba(0,0,0,0.1);
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(41, 53, 86, 0.85);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .stats-badge {
        margin-top: 1.5rem;
    }

    /* Offer Card Styles */
    .offer-card {
        font-family: 'Poppins', sans-serif;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        background: white;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        height: 100%;
        border: none;
    }

        .offer-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.12);
        }

    .offer-header {
        display: flex;
        align-items: center;
        padding: 20px;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        position: relative;
        border-bottom: 1px solid rgba(0,0,0,0.05);
    }

    .client-photo {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid white;
        margin-right: 15px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: white;
    }

    .client-info {
        flex-grow: 1;
    }

    .client-name {
        margin: 0;
        color: #2c3e50;
        font-size: 1.1rem;
        font-weight: 600;
    }

    .offer-date {
        font-size: 0.8rem;
        color: #7f8c8d;
    }

    .offer-amount .badge {
        font-size: 0.9rem;
        padding: 0.35em 0.65em;
        font-weight: 600;
    }

    .status-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

        .status-badge.pendiente {
            background-color: rgba(243, 156, 18, 0.15);
            color: #f39c12;
        }

        .status-badge.aceptada {
            background-color: rgba(46, 204, 113, 0.15);
            color: #27ae60;
        }

        .status-badge.rechazada {
            background-color: rgba(231, 76, 60, 0.15);
            color: #e74c3c;
        }

    .offer-body {
        padding: 0;
    }

    .offer-details {
        padding: 20px;
    }

    .detail-item {
        display: flex;
        justify-content: space-between;
        margin-bottom: 12px;
        align-items: center;
    }

    .detail-label {
        font-weight: 500;
        color: #7f8c8d;
        display: flex;
        align-items: center;
    }

    .detail-value {
        color: #2c3e50;
        font-weight: 500;
    }

        .detail-value.text-success {
            color: #27ae60 !important;
        }

        .detail-value.text-danger {
            color: #e74c3c !important;
        }

        .detail-value.text-warning {
            color: #f39c12 !important;
        }

    .offer-actions {
        display: flex;
        padding: 15px;
        gap: 10px;
        border-top: 1px solid #f1f1f1;
    }

    /* Empty State Styles */
    .empty-state {
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 3rem;
        border: 1px dashed #dee2e6;
    }

    .empty-icon {
        color: #e9ecef;
        margin-bottom: 1.5rem;
    }

    /* Modal Styles */
    .modal-content {
        border-radius: 12px;
        overflow: hidden;
    }

    /* Animation */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .offer-card {
        animation: fadeIn 0.5s ease forwards;
    }

        /* Delay animations for each card */
        .offer-card:nth-child(1) {
            animation-delay: 0.1s;
        }

        .offer-card:nth-child(2) {
            animation-delay: 0.2s;
        }

        .offer-card:nth-child(3) {
            animation-delay: 0.3s;
        }

        .offer-card:nth-child(4) {
            animation-delay: 0.4s;
        }

        .offer-card:nth-child(5) {
            animation-delay: 0.5s;
        }

    /* Responsive Styles */
    @@media (max-width: 768px) {
        .hero-cover {
            height: 280px;
        }

        .hero-overlay h1 {
            font-size: 2.2rem;
        }

        .client-photo {
            width: 50px;
            height: 50px;
            font-size: 1.2rem;
        }

        .offer-actions {
            flex-direction: column;
        }
    }
</style>

