        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .header-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
    }

    .offer-card {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        background: white;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

        .offer-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 20px rgba(0, 0, 0, 0.15);
        }

    .offer-header {
        display: flex;
        align-items: center;
        padding: 20px;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        position: relative;
    }

    .client-photo {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid white;
        margin-right: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: white;
    }

        .client-photo.placeholder.bg-secondary {
            background-color: #6c757d !important;
        }

    .client-info {
        flex-grow: 1;
    }

    .client-name {
        margin: 0;
        color: #2c3e50;
        font-size: 1.2rem;
    }

    .offer-date {
        font-size: 0.85rem;
        color: #7f8c8d;
    }

    .offer-amount .badge {
        font-size: 0.9rem;
        padding: 0.35em 0.65em;
    }

    .status-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: bold;
        text-transform: uppercase;
    }

        .status-badge.pendiente {
            background-color: #f39c12;
            color: white;
        }

        .status-badge.aceptada {
            background-color: #2ecc71;
            color: white;
        }

        .status-badge.rechazada {
            background-color: #e74c3c;
            color: white;
        }

    .offer-details {
        padding: 20px;
        border-bottom: 1px solid #ecf0f1;
        flex-grow: 1;
    }

    .detail-item {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
    }

    .detail-label {
        font-weight: 600;
        color: #7f8c8d;
    }

    .detail-value {
        color: #2c3e50;
    }

        .detail-value.text-success {
            color: #2ecc71 !important;
        }

        .detail-value.text-danger {
            color: #e74c3c !important;
        }

        .detail-value.text-warning {
            color: #f39c12 !important;
        }

    .offer-actions {
        display: flex;
        padding: 15px;
    }

    .action-button {
        flex: 1;
        padding: 10px;
        border: none;
        border-radius: 6px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .action-button:disabled {
            background-color: #ecf0f1;
            color: #95a5a6;
            cursor: not-allowed;
        }

        .action-button:hover:not(:disabled) {
            opacity: 0.9;
            transform: translateY(-2px);
        }

    .empty-state {
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 3rem;
    }

        .empty-state .btn {
            padding: 0.5rem 1.5rem;
        }

    @@media (max-width: 768px) {
        .header-container {
            padding: 1.5rem;
        }

        .client-photo {
            width: 50px;
            height: 50px;
            font-size: 1.2rem;
        }

        .client-name {
            font-size: 1rem;
        }

        .offer-actions {
            flex-direction: column;
            gap: 10px;
        }

            .offer-actions .btn {
                width: 100%;
            }
    }
</style>