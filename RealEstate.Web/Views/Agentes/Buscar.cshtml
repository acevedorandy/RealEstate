@model RealEstate.Persistance.Models.dbo.UsuariosModel

@{
    ViewData["Title"] = "Detalle del Usuario";
}

<h2 class="mb-4 text-center text-primary">Detalle del Usuario</h2>

@if (Model == null)
{
    <div class="alert alert-info text-center">
        No se encontró el usuario.
    </div>
}
else
{
    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-6 col-lg-4 d-flex justify-content-center">
            <div class="card shadow-sm border-0 w-100" style="max-width: 330px;">
                <div class="card-body text-center">
                    <div class="mb-3 d-flex justify-content-center">
                        @if (!string.IsNullOrEmpty(Model.Foto))
                        {
                            <img src="@Model.Foto" alt="Foto de @Model.Nombre"
                                 class="rounded-circle shadow border"
                                 style="width: 120px; height: 120px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white"
                                 style="width: 120px; height: 120px;">
                                Sin foto
                            </div>
                        }
                    </div>
                    <h5 class="card-title">@Model.Nombre @Model.Apellido</h5>
@*                     <p class="card-text mb-1"><strong>Usuario:</strong> @Model.UserName</p>
                    <p class="card-text mb-1"><strong>Email:</strong> @Model.Email</p>
                    <p class="card-text mb-1"><strong>Teléfono:</strong> @Model.Telefono</p>
                    <p class="card-text mb-1"><strong>Cédula:</strong> @Model.Cedula</p>
                    <p class="card-text mb-1"><strong>Rol:</strong> @Model.Rol</p>
                    <p class="card-text">
                        <strong>Activo:</strong>
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Sí</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">No</span>
                        }
                    </p> *@
                    <a href="@Url.Action("Index", "Propiedades", new { agenteId = Model.Id })"
                       class="btn btn-outline-primary mt-3">
                        <i class="bi bi-house-door"></i> Ver propiedades
                    </a>
                    <br>
                    <a href="javascript:history.back()" class="btn btn-outline-secondary mt-3">
                        <i class="bi bi-arrow-left"></i> Volver atrás
                    </a>
                </div>
            </div>
        </div>
    </div>
}
