@using Microsoft.AspNetCore.Http;
@using RealEstate.Web.Middlewares;
@using RealEstate.Application.Dtos.dbo;
@using RealEstate.Application.Responses.identity;
@using RealEstate.Application.Helpers.web;
@inject IHttpContextAccessor httpContext
@{
    var usuarios = httpContext.HttpContext.Session.Get<AuthenticationResponse>("usuario");
    var isAdmin = usuarios != null ? usuarios.Roles.Any(r => r == "Administrador") : false;
    var isAgent = usuarios != null ? usuarios.Roles.Any(r => r == "Agente") : false;
    var isClient = usuarios != null ? usuarios.Roles.Any(r => r == "Cliente") : false;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RealEstate.Web</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Sidebar Styles -->
    <style>
        :root {
            --sidebar-width: 280px;
            --sidebar-bg: linear-gradient(135deg, #2c3e50, #34495e);
            --sidebar-text: rgba(255, 255, 255, 0.8);
            --sidebar-active: #3498db;
            --sidebar-hover: rgba(255, 255, 255, 0.1);
            --transition-speed: 0.3s;
        }

        /* Main Layout Structure */
        .main-wrapper {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar Styles */
        .sidebar {
            width: var(--sidebar-width);
            background: var(--sidebar-bg);
            color: white;
            position: fixed;
            height: 100vh;
            overflow-y: auto;
            box-shadow: 5px 0 15px rgba(0, 0, 0, 0.1);
            transition: all var(--transition-speed) ease;
            z-index: 1000;
        }

        .sidebar-brand {
            padding: 1.5rem;
            text-align: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

            .sidebar-brand img {
                max-width: 150px;
                height: auto;
                margin-bottom: 1rem;
            }

            .sidebar-brand .app-name {
                font-weight: 600;
                font-size: 1.2rem;
                color: white;
                letter-spacing: 1px;
            }

        /* Navigation Items */
        .nav-item {
            margin: 0.25rem 1rem;
            border-radius: 8px;
            overflow: hidden;
        }

        .nav-link {
            color: var(--sidebar-text);
            padding: 0.75rem 1.5rem;
            display: flex;
            align-items: center;
            font-weight: 500;
            transition: all var(--transition-speed) ease;
            border-radius: 8px;
        }

            .nav-link i {
                width: 24px;
                text-align: center;
                margin-right: 12px;
                font-size: 1.1rem;
            }

            .nav-link:hover, .nav-link.active {
                background: var(--sidebar-hover);
                color: white;
                transform: translateX(5px);
            }

                .nav-link:hover i, .nav-link.active i {
                    color: var(--sidebar-active);
                }

        /* User Profile Section */
        .user-profile {
            display: flex;
            align-items: center;
            padding: 1rem;
            margin: 1rem;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            transition: all var(--transition-speed) ease;
        }

            .user-profile:hover {
                background: rgba(255, 255, 255, 0.2);
            }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 12px;
            background: #3498db;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 1.2rem;
        }

        .user-info {
            flex: 1;
        }

        .user-name {
            font-weight: 500;
            margin-bottom: 0;
            color: white;
            font-size: 0.95rem;
        }

        .user-role {
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.8rem;
            margin-bottom: 0;
        }

        /* Collapsible Menu */
        .collapse-menu {
            padding-left: 1.5rem;
        }

            .collapse-menu .nav-link {
                padding: 0.5rem 1rem;
                font-size: 0.9rem;
            }

        /* Logout Button */
        .logout-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0.75rem;
            margin: 1rem;
            border-radius: 8px;
            background: rgba(231, 76, 60, 0.1);
            color: rgba(255, 255, 255, 0.8);
            border: none;
            transition: all var(--transition-speed) ease;
            font-weight: 500;
            width: calc(100% - 2rem);
        }

            .logout-btn:hover {
                background: rgba(231, 76, 60, 0.3);
                color: white;
            }

            .logout-btn i {
                margin-right: 8px;
            }

        /* Content Area */
        .content {
            margin-left: var(--sidebar-width);
            flex: 1;
            padding: 2rem;
            min-height: 100vh;
            background-color: #f8f9fa;
        }

        /* Responsive Adjustments */
        @@media (max-width: 992px) {
            .sidebar {
                transform: translateX(-100%);
            }

                .sidebar.active {
                    transform: translateX(0);
                }

            .content {
                margin-left: 0;
            }
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="main-wrapper">
        <!-- Sidebar Navigation -->
        <nav class="sidebar">
            <div class="sidebar-brand">
                <img src="~/images/logo/realEstate.png" alt="RealEstate Logo">
                <div class="app-name">RealEstate.Web</div>
            </div>

            <ul class="nav flex-column">
                @if (usuarios != null)
                {
                    <!-- User Profile Section -->
                    <li class="user-profile">
                        <div class="user-avatar">
                            @usuarios.UserName.Substring(0, 1).ToUpper()
                        </div>
                        <div class="user-info">
                            <div class="user-name">@usuarios.UserName</div>
                            <div class="user-role">
                                @string.Join(", ", usuarios.Roles)
                            </div>
                        </div>
                    </li>

                    @if (isAdmin)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Administrador" asp-action="Index">
                                <i class="fas fa-home"></i> Dashboard
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Administrador" asp-action="ListaAgentes">
                                <i class="fas fa-user-tie"></i> Agentes
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Administrador" asp-action="ListaAdministradores">
                                <i class="fas fa-users-cog"></i> Administradores
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Administrador" asp-action="ListaDesarrolladores">
                                <i class="fas fa-code"></i> Desarrolladores
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="TiposPropiedad" asp-action="Index">
                                <i class="fas fa-building"></i> Tipos Propiedad
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="TiposVenta" asp-action="Index">
                                <i class="fas fa-tag"></i> Tipos Venta
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Mejoras" asp-action="Index">
                                <i class="fas fa-tools"></i> Mejoras
                            </a>
                        </li>
                    }
                    else if (isClient)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Clientes" asp-action="Index">
                                <i class="fas fa-home"></i> Inicio
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Agentes" asp-action="Index">
                                <i class="fas fa-user-tie"></i> Agentes
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="collapse" href="#clientMenu" role="button">
                                <i class="fas fa-list"></i> Menú <i class="fas fa-chevron-down float-end mt-1"></i>
                            </a>
                            <div class="collapse collapse-menu" id="clientMenu">
                                <ul class="nav flex-column">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Clientes" asp-action="MisPropiedades">
                                            <i class="fas fa-house-user"></i> Mis Propiedades
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Ofertas" asp-action="Index">
                                            <i class="fas fa-hand-holding-usd"></i> Mis Ofertas
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Mensajes" asp-action="ChatsCliente">
                                            <i class="fas fa-comments"></i> Mensajes
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    }
                    else if (isAgent)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Agentes" asp-action="Home">
                                <i class="fas fa-home"></i> Inicio
                            </a>
                        </li>

@*                         <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Contratos" asp-action="Index">
                                <i class="fas fa-file-contract"></i> Contratos
                            </a>
                        </li> *@

@*                         <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Mensajes" asp-action="Index">
                                <i class="fas fa-comments"></i> Mensajes
                            </a>
                        </li> *@

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Mensajes" asp-action="ChatsAgente">
                                <i class="fas fa-comments"></i> Mensajes
                            </a>
                        </li>

@*                         <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Pagos" asp-action="Index">
                                <i class="fas fa-money-bill-wave"></i> Pagos
                            </a>
                        </li> *@

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Propiedades" asp-action="Index">
                                <i class="fas fa-building"></i> Propiedades
                            </a>
                        </li>

@*                         <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Ofertas" asp-action="Index">
                                <i class="fas fa-handshake"></i> Ofertas
                            </a>
                        </li> *@

@*                         <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Reservas" asp-action="Index">
                                <i class="fas fa-calendar-check"></i> Reservas
                            </a>
                        </li> *@

@*                         <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Usuarios" asp-action="Index">
                                <i class="fas fa-users"></i> Usuarios
                            </a>
                        </li> *@
                    }

                    <!-- Common Menu Items -->
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="collapse" href="#profileMenu" role="button">
                            <i class="fas fa-user-cog"></i> Mi Perfil <i class="fas fa-chevron-down float-end mt-1"></i>
                        </a>
                        <div class="collapse collapse-menu" id="profileMenu">
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="MiPerfil">
                                        <i class="fas fa-user-edit"></i> Editar Perfil
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="ForgotPassword">
                                        <i class="fas fa-key"></i> Cambiar Contraseña
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link logout-btn" asp-area="" asp-controller="Account" asp-action="LogOut">
                            <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                        </a>
                    </li>
                }
                else
                {
                    <!-- Public Menu Items -->
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home"></i> Inicio
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Agentes" asp-action="Index">
                            <i class="fas fa-user-tie"></i> Agentes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">
                            <i class="fas fa-user-plus"></i> Registrarse
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Index">
                            <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
                        </a>
                    </li>
                }
            </ul>
        </nav>

        <!-- Main Content Area -->
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Sidebar Script -->
    <script>
        // Highlight active menu item
        $(document).ready(function () {
            var current = location.pathname;
            $('.nav-link').each(function () {
                var $this = $(this);
                if ($this.attr('href') === current) {
                    $this.addClass('active');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>