@section Styles {
    <style>
        .avatar {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            object-fit: cover;
        }

        .bg-gray-100 {
            background-color: #f8f9fa !important;
        }

        .chat-message {
            max-width: 80%;
            padding: 0.75rem 1rem;
            margin-bottom: 0.5rem;
            border-radius: 1rem;
            word-wrap: break-word;
        }

        .message-in {
            background: #e9ecef;
            border-top-left-radius: 0.25rem !important;
            margin-right: auto;
        }

        .message-out {
            background: #007bff;
            color: white;
            border-top-right-radius: 0.25rem !important;
            margin-left: auto;
        }

        .message-time {
            font-size: 0.7rem;
            opacity: 0.8;
            margin-top: 0.25rem;
        }
    </style>
}